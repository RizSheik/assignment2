{
  "compilerOptions": {
    "target": "ES2017", // Good for modern JavaScript features
    "lib": ["dom", "dom.iterable", "esnext"], // Includes modern DOM and ES features
    "allowJs": true, // Allow JavaScript files in your project
    "skipLibCheck": true, // Skip type checking of declaration files for faster builds
    "strict": true, // Enables all strict type-checking options
    "noEmit": true, // Prevent emitting compiled files
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "module": "esnext", // Use ES module syntax
    "moduleResolution": "node", // Resolves modules similar to Node.js
    "resolveJsonModule": true, // Allow importing `.json` files
    "isolatedModules": true, // Ensures every file can be transpiled individually
    "jsx": "preserve", // Preserves JSX for Next.js handling
    "incremental": true, // Speeds up subsequent builds
    "baseUrl": ".", // Sets the base URL for resolving non-relative module names
    "paths": {
      "@/*": ["./src/*"] // Path alias for easier imports
    },
    "plugins": [
      {
        "name": "next" // Next.js TypeScript plugin
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
